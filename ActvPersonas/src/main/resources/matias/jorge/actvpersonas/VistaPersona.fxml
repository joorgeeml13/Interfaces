<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<HBox xmlns="http://javafx.com/javafx/25" xmlns:fx="http://javafx.com/fxml/1" fx:controller="matias.jorge.actvpersonas.controllers.PrimaryController">
   <children>
      <VBox spacing="35.0">
         <children>
            <VBox spacing="20.0">
               <children>
                  <Label maxWidth="1.7976931348623157E308" minHeight="-Infinity" text="Nombre:" />
                  <TextField fx:id="tfNombre" prefHeight="25.0" prefWidth="144.0" />
               </children>
            </VBox>
            <VBox spacing="20.0">
               <children>
                  <Label maxWidth="1.7976931348623157E308" minHeight="-Infinity" text="Apellidos:" />
                  <TextField fx:id="tfApellido" prefHeight="25.0" prefWidth="144.0" />
               </children>
            </VBox>
            <VBox spacing="20.0">
               <children>
                  <Label maxWidth="1.7976931348623157E308" minHeight="-Infinity" text="Edad:" />
                  <TextField fx:id="tfEdad" />
               </children>
            </VBox>
            <Button fx:id="btnAgregar" maxWidth="1.7976931348623157E308" mnemonicParsing="false" onAction="#agregarPersona" text="Agregar persona" />
         </children>
         <HBox.margin>
            <Insets />
         </HBox.margin>
         <padding>
            <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
         </padding>
      </VBox>
      <VBox>
         <children>
            <TableView fx:id="tablePersonas" prefHeight="300.0" prefWidth="450.0">
              <columns>
                <TableColumn fx:id="columnNombre" maxWidth="1.7976931348623157E308" minWidth="-Infinity" prefWidth="200.0" text="Nombre" />
                <TableColumn fx:id="columnApellido" maxWidth="1.7976931348623157E308" minWidth="-Infinity" prefWidth="200.0" text="Apellido" />
                  <TableColumn fx:id="columnEdad" maxWidth="1.7976931348623157E308" minWidth="-Infinity" prefWidth="50.0" text="Edad" />
              </columns>
            </TableView>
            <HBox alignment="TOP_CENTER" prefWidth="200.0" spacing="100.0">
               <children>
                  <Button fx:id="btnModificar" mnemonicParsing="false" prefWidth="149.0" text="Modificar" />
                  <Button fx:id="btnEliminar" mnemonicParsing="false" onAction="#eliminarSelecionado" prefWidth="149.0" text="Eliminar" />
               </children>
               <padding>
                  <Insets top="10.0" />
               </padding>
            </HBox>
         </children>
         <padding>
            <Insets bottom="20.0" left="10.0" right="10.0" top="10.0" />
         </padding>
      </VBox>
   </children>
</HBox>
