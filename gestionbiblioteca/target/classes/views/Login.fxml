<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>

<VBox alignment="CENTER" spacing="20.0" xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.jorgematias.controller.LoginController" prefWidth="400" prefHeight="300">
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0"/>
    </padding>
    <Label text="Biblioteca Locotrón" style="-fx-font-size: 24px; -fx-font-weight: bold;"/>
    
    <TextField fx:id="txtUser" promptText="Usuario" />
    <PasswordField fx:id="txtPass" promptText="Contraseña" />
    
    <Button fx:id="btnLogin" text="Entrar" onAction="#handleLogin" maxWidth="Infinity" style="-fx-background-color: #2ecc71; -fx-text-fill: white;"/>
    
    <Label fx:id="lblError" text="" textFill="RED" />
</VBox>